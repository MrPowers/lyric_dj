<div class="container">
  <div class="row">
    <div class="artist-info">
      <h2><%= @song.name%></h2>
      <h3><%=@song.artist.first_name + " " + @song.artist.last_name%></h3>
    </div>
    <div class="lyrics col-md-6">
      <h5>Fill in the blank words! Press enter to grade the word and tab to skip to the next field.</h5>
      <br>
      <% @blankified_lyrics.each do |lyric| %>
        <%= lyric %>
        <br>
      <% end %>
    </div>
  </div>
</div>
