<div class="container">

  <%= link_to "Insane", "/songs/#{@song.id}?lines_per_blank=1" %>

  <div class="row">
    <div class="artist-info">
      <h2><%= @song.name%></h2>
      <h3><%=@song.artist.first_name + " " + @song.artist.last_name%></h3>
      <div class="level">
        <p>Difficulty: </p>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown"><%= to_difficulty(params[:lines_per_blank]) %>
          <span class="caret"></span></button>
          <ul class="dropdown-menu">
            <li><%= link_to "Insane", "/songs/#{@song.id}?lines_per_blank=1" %></li>
            <li><%= link_to "Hard", "/songs/#{@song.id}?lines_per_blank=2" %></li>
            <li><%= link_to "Normal", "/songs/#{@song.id}?lines_per_blank=3" %></li>
            <li><%= link_to "Easy", "/songs/#{@song.id}?lines_per_blank=4" %></li>
          </ul>
        </div>
      </div>
      <div class="level">
        <p>Song Speed: </p>
        <select id="select-speed">
          <option value="1.2">120%</option>
          <option selected="selected" value="1">100%</option>
          <option value="0.9">90%</option>
          <option value=".75">75%</option>
        </select>
      </div>
    </div>
    <div class="col-md-6">
      <audio id="audio-player" class="col-md-12" controls>
        <source src="<%= @song_path %>" type="audio/mpeg">
      </audio>
      <div class="col-md-12 score">
        <h3>Score</h3>
        <p><span id="num-correct">0</span> / <%=@number_of_blanks%></p>
      </div>
    </div>
    <div class="lyrics col-md-6">
      <h5>Fill in the blank words! Press enter to grade the word and tab to skip to the next field.</h5>
      <br>
      <% @blankified_lyrics.each do |lyric| %>
        <%= lyric %>
        <br>
      <% end %>
    </div>
  </div>
</div>
