<%= render "song_player" %>

<div class="container" id="song-body">
  <div class="row">
    <div class="artist-info">
      <h2><%= @song.name %></h2>
      <h3><%= @song.artist.full_name %></h3>
      <br>
      <p>Press <span class="label label-info">Enter</span> to grade the word and <span class="label label-info">Tab</span> to skip to the next word.</p>
    </div>
    <div class="lyrics col-md-8 col-md-offset-2">
      <br>
      <% @blankified_lyrics.each do |lyric| %>
        <%= lyric %>
        <br>
      <% end %>
    </div>
  </div>
</div>
