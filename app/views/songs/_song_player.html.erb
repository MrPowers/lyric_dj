<div class="row navbar-fixed-top" id="song-controls">
  <div class="col-md-6 col-md-offset-3">

    <% if @song_path %>

      <audio id="audio-player" controls>
        <source src="<%= @song_path %>" type="audio/mp3">
      </audio>

      <span class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
          Speed: <span id="current-speed">100%</span>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
          <li><a class="speed" data-value="1.2">120%</a></li>
          <li><a class="speed" data-value="1">100%</a></li>
          <li><a class="speed" data-value="0.9">90%</a></li>
          <li><a class="speed" data-value="0.75">75%</a></li>
        </ul>
      </span>

    <% end %>

    <span class="dropdown">
      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        Difficulty: <%= @difficulty %>
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <li><%= link_to "Insane", "/#{@artist.slug}/#{@song.slug}?difficulty=insane" %></li>
        <li><%= link_to "Hard", "/#{@artist.slug}/#{@song.slug}?difficulty=hard" %></li>
        <li><%= link_to "Normal", "/#{@artist.slug}/#{@song.slug}?difficulty=normal" %></li>
        <li><%= link_to "Easy", "/#{@artist.slug}/#{@song.slug}?difficulty=easy" %></li>
      </ul>
    </span>
  </div>
</div>
