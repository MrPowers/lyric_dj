<li>
  <audio id="audio-player" controls>
    <source src="<%= @song_path %>" type="audio/mpeg">
  </audio>
</li>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Speed: <span id="current-speed">100%</span>
  <span class="caret"></span>
  <ul class="dropdown-menu">
    <li><a class="speed" href="#" data-value="1.2">120%</a></li>
    <li><a class="speed" href="#" data-value="1">100%</a></li>
    <li><a class="speed" href="#" data-value="0.9">90%</a></li>
    <li><a class="speed" href="#" data-value="0.75">75%</a></li>
  </ul>
</li>
<li class="dropdown level">
  <a href="#" class="dropdown-toggle" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Difficulty: <%= to_difficulty(params[:lines_per_blank]) %>
  <span class="caret"></span>
  <ul class="dropdown-menu">
    <li><%= link_to "Insane", "/songs/#{@song.id}?lines_per_blank=1" %></li>
    <li><%= link_to "Hard", "/songs/#{@song.id}?lines_per_blank=2" %></li>
    <li><%= link_to "Normal", "/songs/#{@song.id}?lines_per_blank=3" %></li>
    <li><%= link_to "Easy", "/songs/#{@song.id}?lines_per_blank=4" %></li>
  </ul>
</li>
